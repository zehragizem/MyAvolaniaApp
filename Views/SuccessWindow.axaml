<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyAvaloniaApp.Views.SuccessWindow"
        Title="Başarılı"
        Width="300"
        Height="100">
    <Grid Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- Image column -->
            <ColumnDefinition Width="Auto"/> <!-- Spacer or text column -->
        </Grid.ColumnDefinitions>
        <Image Source="avares://MyAvaloniaApp/Assets/checkmark.jpg" Width="50" Height="50" Grid.Column="0"/>
        <TextBlock Text="Başarıyla Eklendi" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0"/>
    </Grid>
</Window>
